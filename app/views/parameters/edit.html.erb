<h2>Setting plugin:</h2>

<div class="box tabular settings">

  <%= form_with url: "parameter/update", method: :post do |form| %>
    <div class="row">
      <p class="col-3">
        <p><%= form.label :query, "Utilisateur assigné au ticket:" %></p>
        <p><%= form.text_field :userAssigned %></p>
      </div>
      <div class="col-3">
        <p><%= form.label :query, "Key API Redmine:" %></p>
        <p><%= form.text_field :keyAPI_redmine %></p>
      </div>
      <div class="col-3">
        <p><%= form.label :query, "Key API DHL" %></p>
        <p><%= form.text_field :keyAPI_dhl %></p>
      </div>

      <div class="col-3">
        <p><%= form.label :query, "Delais création ticket (jours):" %></p>
        <p><%= form.text_field :dayRecall %></p>
      </div>
      <div class="col-3">
        <p><%= form.submit "Sauvegarder" %></p>
      </div>
    </div>
  <% end %>

</div>
