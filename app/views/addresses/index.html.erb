    <%= javascript_include_tag 'modue', :plugin => 'jd_order_management' %>


<% end %>
<h2>Adresses</h2>
<nav>
    <a href="<%= putformViewAdmin_path(nil) %>" type="button" class="btn btn-light">+ création</a>
    <a href="<%= addresses_path() %>" type="button" class="btn btn-light">Gestion Adresses</a>
    <a href="<%= devices_path() %>" type="button" class="btn btn-light">Modules</a>
</nav>

    <div class="box">
        <div class="col-6">
            <%= form_for @addresse  do |form| %>
                    <div style="margin-top: 10px"  class="inline">
                        <%= form.text_field :name, placeholder:'Nom' %>
                        <%= form.text_field :localisation, placeholder:'Adresse' %>
                        <button id="formModuleSave" style="margin-top: 10px" type="submit" class="btn  mb-2" onclick="eventSaveModule()">save</button>
                    </div>
            <% end %> 
        </div>
    <div>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">nom</th>
      <th scope="col">Adresses</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <% Addresse.all.each do |mod| %>
  <tbody>
    <tr id="row_<%=mod.id%>">
      <td><%= mod.id %></td>
      <td><%= mod.name %></td>
      <td><%= mod.localisation %></td>
      <td><%= link_to "Supprimer", address_path(mod),
                  method: :delete,
                  data: { confirm: "etes vous sûr?" } %></td>
    </tr>
  </tbody>
  <% end %>
</table>
